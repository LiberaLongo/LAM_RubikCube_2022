<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:layout_marginHorizontal="@dimen/margin"
	tools:context=".ui.ColorFragment"
	android:weightSum="6" >

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@dimen/auto_fit"
		android:textSize="@dimen/color_dimension"
		android:text="@string/hello"/>

	<Button
		android:id="@+id/button_Default"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@dimen/auto_fit"
		android:textSize="@dimen/color_dimension"
		android:backgroundTint="@color/black"
		android:textColor="@color/white"
		android:text="@string/default_colors"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@dimen/auto_fit"
		android:weightSum="2"
		android:orientation="horizontal">

		<Button
			android:id="@+id/button_Front"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@dimen/auto_fit"
			tools:ignore="NestedWeights"
			android:backgroundTint="@color/red"
			android:text="@string/Front_name"
			android:textSize="@dimen/color_dimension"
			android:textColor="@color/black"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_marginEnd="@dimen/margin" />

		<Button
			android:id="@+id/button_Back"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@dimen/auto_fit"
			tools:ignore="NestedWeights"
			android:backgroundTint="@color/orange"
			android:text="@string/Back_name"
			android:textSize="@dimen/color_dimension"
			android:textColor="@color/black"
			style="?android:attr/buttonBarButtonStyle"  />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@dimen/auto_fit"
		android:orientation="horizontal">

		<Button
			android:id="@+id/button_Right"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@dimen/auto_fit"
			tools:ignore="NestedWeights"
			android:backgroundTint="@color/blue"
			android:text="@string/Right_name"
			android:textSize="@dimen/color_dimension"
			android:textColor="@color/black"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_marginEnd="@dimen/margin" />

		<Button
			android:id="@+id/button_Left"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@dimen/auto_fit"
			tools:ignore="NestedWeights"
			android:backgroundTint="@color/green"
			android:text="@string/Left_name"
			android:textSize="@dimen/color_dimension"
			android:textColor="@color/black"
			style="?android:attr/buttonBarButtonStyle"  />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@dimen/auto_fit"
		android:orientation="horizontal">

		<Button
			android:id="@+id/button_Up"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@dimen/auto_fit"
			tools:ignore="NestedWeights"
			android:backgroundTint="@color/pink"
			android:text="@string/Up_name"
			android:textSize="@dimen/color_dimension"
			android:textColor="@color/black"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_marginEnd="@dimen/margin" />

		<Button
			android:id="@+id/button_Down"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="@dimen/auto_fit"
			tools:ignore="NestedWeights"
			android:backgroundTint="@color/yellow"
			android:text="@string/Down_name"
			android:textSize="@dimen/color_dimension"
			android:textColor="@color/black"
			style="?android:attr/buttonBarButtonStyle"  />
	</LinearLayout>

	<Button
		android:id="@+id/button_Confirm"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="@dimen/auto_fit"
		android:textSize="@dimen/color_dimension"
		android:backgroundTint="@color/black"
		android:textColor="@color/white"
		android:text="@string/confirm" />
</LinearLayout>