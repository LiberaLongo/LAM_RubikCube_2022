<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/linearLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.ColorFragment">

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.45"/>

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/hello"
		android:textSize="@dimen/tv_fontSize"
		android:layout_marginHorizontal="@dimen/margin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<EditText
		android:id="@+id/editText"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:autofillHints="@string/write_hint"
		android:ems="10"
		android:gravity="start|top"
		android:hint="@string/copy_here_hint"
		android:inputType="textMultiLine"
		android:minHeight="100dp"
		app:layout_constraintTop_toBottomOf="@+id/textView"
		tools:ignore="LabelFor"
		tools:layout_editor_absoluteX="16dp" />

	<Button
		android:id="@+id/btn_send_cube"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:backgroundTint="@color/cube"
		android:text="@string/send_cube"
		android:textSize="@dimen/send_receive_dim"
		android:layout_marginHorizontal="@dimen/margin"
		app:layout_constraintBottom_toBottomOf="@+id/btn_receive_cube"
		app:layout_constraintEnd_toStartOf="@+id/guideline"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_receive_cube" />

	<Button
		android:id="@+id/btn_receive_cube"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/margin"
		android:backgroundTint="@color/cube"
		android:text="@string/receive_cube"
		android:textSize="@dimen/send_receive_dim"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/guideline"
		app:layout_constraintTop_toBottomOf="@+id/editText" />

	<Button
		android:id="@+id/btn_send_txt"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:backgroundTint="@color/txt"
		android:text="@string/send_txt"
		android:textSize="@dimen/send_receive_dim"
		android:layout_marginHorizontal="@dimen/margin"
		app:layout_constraintBottom_toBottomOf="@+id/btn_receive_txt"
		app:layout_constraintEnd_toStartOf="@+id/guideline"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_receive_txt" />

	<Button
		android:id="@+id/btn_receive_txt"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:backgroundTint="@color/txt"
		android:text="@string/receive_txt"
		android:textSize="@dimen/send_receive_dim"
		android:layout_marginHorizontal="@dimen/margin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/guideline"
		app:layout_constraintTop_toBottomOf="@+id/btn_receive_cube" />

	<Button
		android:id="@+id/btn_send_pdf"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:backgroundTint="@color/pdf"
		android:text="@string/send_pdf"
		android:textSize="@dimen/send_receive_dim"
		android:layout_marginHorizontal="@dimen/margin"
		app:layout_constraintBottom_toBottomOf="@+id/btn_receive_pdf"
		app:layout_constraintEnd_toStartOf="@+id/guideline"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/btn_receive_pdf" />

	<Button
		android:id="@+id/btn_receive_pdf"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:backgroundTint="@color/pdf"
		android:text="@string/receive_pdf"
		android:textSize="@dimen/send_receive_dim"
		android:layout_marginHorizontal="@dimen/margin"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@+id/guideline"
		app:layout_constraintTop_toBottomOf="@+id/btn_receive_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>