<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/linearLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.ColorFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_marginHorizontal="@dimen/margin"
		android:weightSum="8">

		<ScrollView
			android:id="@+id/scrollView"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/textView"
					android:text="@string/hello"
					android:autoSizeTextType="uniform"
					android:layout_height="wrap_content"
					android:layout_width="match_parent" />
			</LinearLayout>
		</ScrollView>

		<Button
			android:id="@+id/btn_send_cube"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@dimen/auto_fit"
			android:autoSizeTextType="uniform"
			android:text="@string/send_cube"
			android:backgroundTint="@color/cube" />

		<Button
			android:id="@+id/btn_receive_cube"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@dimen/auto_fit"
			android:autoSizeTextType="uniform"
			android:text="@string/receive_cube"
			android:backgroundTint="@color/cube"/>

		<Button
			android:id="@+id/btn_send_txt"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@dimen/auto_fit"
			android:autoSizeTextType="uniform"
			android:text="@string/send_txt"
			android:backgroundTint="@color/txt" />

		<Button
			android:id="@+id/btn_receive_txt"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@dimen/auto_fit"
			android:autoSizeTextType="uniform"
			android:text="@string/receive_txt"
			android:backgroundTint="@color/txt"/>

		<Button
			android:id="@+id/btn_send_pdf"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="@dimen/auto_fit"
			android:autoSizeTextType="uniform"
			android:text="@string/send_pdf"
			android:backgroundTint="@color/pdf" />
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>