<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<Button
		android:id="@+id/buttonDown"
		android:layout_width="@dimen/button_width"
		android:layout_height="@dimen/button_height"
		android:layout_marginHorizontal="@dimen/margin"
		android:backgroundTint="@color/yellow"
		android:text="@string/Down_letter"
		android:textSize="@dimen/button_fontSize"
		app:layout_constraintEnd_toEndOf="@+id/buttonBack"
		app:layout_constraintStart_toStartOf="@+id/buttonLeft"
		app:layout_constraintTop_toBottomOf="@+id/buttonLeft" />

	<Button
		android:id="@+id/buttonLeft"
		android:layout_width="@dimen/button_width"
		android:layout_height="@dimen/button_height"
		android:layout_marginHorizontal="@dimen/margin"
		android:backgroundTint="@color/green"
		android:text="@string/Left_letter"
		android:textSize="@dimen/button_fontSize"
		app:layout_constraintEnd_toStartOf="@+id/buttonBack"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/buttonBack"
		android:layout_width="@dimen/button_width"
		android:layout_height="@dimen/button_height"
		android:layout_marginHorizontal="@dimen/margin"
		android:backgroundTint="@color/orange"
		android:text="@string/Back_letter"
		android:textSize="@dimen/button_fontSize"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>